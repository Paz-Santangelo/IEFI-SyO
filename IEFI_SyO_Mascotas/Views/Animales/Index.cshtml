@model IEnumerable<IEFI_SyO_Mascotas.Models.Animales>

@{
    ViewBag.Title = "Lista Animales";
}

<h2>Lista de Animales</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Animal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Animal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id_Animal }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_Animal }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_Animal })
        </td>
    </tr>
}

</table>
